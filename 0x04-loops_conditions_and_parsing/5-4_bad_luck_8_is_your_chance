#!/usr/bin/env bash
# Looping from 1 to 10 and display:
#   "bad luck" for the 4th display
#   "good luck" for the 8th display
#   "Best School" for all other display

count=0

while [ $count -lt 10 ]
do
  if [ $count -eq 3 ]
  then
    echo "bad luck"
  elif [ $count -eq 7 ]
  then
    echo "good luck"
  else
    echo "Best School"
  fi
  (( count++ ))
done
